{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The main content area on the homepage }}
<main class="site-main wow fadeIn" data-wow-duration=".8s" role="main">

  {{! Search results }}
  <section id="results"></section>

  {{! Everything inside the #author tags pulls data from the author }}
  {{#author}}
    {{#if cover}}
      <section class="featured-image">
        <img src="{{cover}}">
      </section>
    {{/if}}
  {{/author}}

  <div class="row">
    <div class="column medium-column-40">
      {{! Everything inside the #author tags pulls data from the author }}
      {{#author}}
        <section class="author-profile">
          {{#if image}}
            <div class="author-image" style="background-image: url({{image}})">{{name}}'s Picture</div>
          {{/if}}
          <h1 class="author-title">{{name}}</h1>
          {{#if bio}}
            <p class="author-bio">{{bio}}</p>
          {{/if}}
          <div class="author-meta">
            {{#if website}}
              <p class="author-link"><span class="icon-website"></span><a href="{{website}}">{{website}}</a></p>
            {{/if}}
            {{#if location}}
              <p class="author-location"><span class="icon-location"></span>{{location}}</p>
            {{/if}}
            <p class="author-stats"><span class="icon-posts"></span>{{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}</p>
          </div>
        </section>
      {{/author}}
    </div>

    <div class="column medium-offset-5">
      {{! The tag below includes the post loop - partials/loop-alt.hbs }}
      {{> "loop-alt"}}
    </div>
  </div>

</main>
