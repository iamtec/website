{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
  <article class="{{post_class}} wow fadeIn" data-wow-duration=".8s">
    <div class="row">

      <div class="column medium-column-40">
        <header class="entry-header">
          {{#author}}
            <p class="entry-author">By <a href="{{url}}">{{name}}</a></p>
          {{/author}}
          <h2 class="entry-title"><a href="{{url}}">{{{title}}}</a></h2>
          <p class="entry-tags">Posted {{tags prefix="in "}} on <time class="entry-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
          </p>
        </header>
      </div>

      <div class="column medium-offset-5">
        <section class="entry-content">
          <p>{{excerpt words="80"}}</p>
          <p><a href="{{url}}" class="more-link">Read more</a></p>
        </section>
      </div>

    </div>
  </article>
{{/foreach}}

{{! Previous/next page links - displayed on every page }}
{{pagination}}
